	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
    android:background="@color/page_bg"
	    android:gravity="center"
	   	android:padding="3dp"
	    >
	     <TextView android:id="@+id/denyView"
	        android:layout_width="fill_parent"
